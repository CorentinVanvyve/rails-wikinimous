
<div class="container">
  <%= form_for(Article.new) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
</div>


<div class="container">
  <ul>
    <% @articles.each do |article| %>
      <li><a href="http://localhost:3000/articles/<%=article.id%>"><%= article.title %></a>

      <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%><i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>
